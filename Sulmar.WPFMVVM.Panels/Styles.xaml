<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Sulmar.WPFMVVM.Panels">

    <SolidColorBrush x:Key="BackgroundButtonBrush" Color="Green" />
    <SolidColorBrush x:Key="ForegroundButtonBrush" Color="White" />

    <sys:Double x:Key="ButtonWidth">200</sys:Double>
    <sys:Double x:Key="ButtonHeight">50</sys:Double>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundButtonBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundButtonBrush}" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="100" />
        <Setter Property="Margin" Value="5" />
    </Style>
    
</ResourceDictionary>